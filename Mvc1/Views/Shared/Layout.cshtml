@using Mvc1.Models

@using ClassLibrary1.pakad

@{
    IEnumerable<CategoryModel> Cat = new CategoryHandler().Getcategory().ToselectCatModelList();

}


@using ClassLibrary1.user


@{


    User currentUser = (User)Session[Webutil.CurrentUser];

}



<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    @RenderSection("myStyles", false)
</head>
<body>

    <nav class="navbar navbar-default navbar-fixed-top">
        <div>
        <div class="container-fluid">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mainmenue">
                    <span class="glyphicon glyphicon-circle-arrow-down"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index"><span class="glyphicon glyphicon-tags"></span> PakClassified</a>
            </div>

      
                <ul class="nav navbar-nav">

                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="~/Home/Featured/">Featured</a></li>
                    <li><a href="~/Home/Admin">Grid</a></li>
                    @if (Cat.Count() > 0)
                    {


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
                        
                        

                            <ul class="dropdown-menu">
                                @foreach (var c in Cat)
                                {
                                <li><a href="~/Home/ByCategory/@c.Id">@c.Name</a></li>

                                }
                                
                               
                            </ul>
                        
                        
                    </li>
                    }
                    <li><a href="~/Advertisement/postAd">Postad</a></li>
                    
                    </ul>
                <ul class="nav navbar-nav navbar-right">

                    @if (currentUser == null)
                    {
                        <li><a href="/Login/UserLogin"><span class="glyphicon glyphicon-log-in"></span> Login </a></li>
                        <li><a href="/Login/Signup"><span class="glyphicon glyphicon-user"></span> Sign Up </a></li>
                    }
                   else { 

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" ><span class="glyphicon glyphicon-user"></span> @currentUser.FullName <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Login/Profile"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
                            <li><a href="/Home/Index"><span class="glyphicon glyphicon-user"></span> My Ads</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-lock"></span> Change Password</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/Login/Logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                        </ul>
                    </li>
                    }
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
            

    <header class="container-fluid" style="padding:0px;">
        @RenderSection("banner", false)
    </header>
    <div id="maincontents" class="container-fluid" style="padding:0px;">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("myScript", false)
</body>
</html>
